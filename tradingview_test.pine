bool test = barstate.islast
alertcondition(test, title='Long Open', message='{"symbol": "{{ticker}}", "alert": "long_open", "price": "{{close}}", "key": "YOUR_BOT_HOOK_KEY"}')
alertcondition(test, title='Long Close', message='{"symbol": "{{ticker}}", "alert": "long_close", "price": "{{close}}", "key": "YOUR_BOT_HOOK_KEY"}')
alertcondition(test, title='Short Open', message='{"symbol": "{{ticker}}", "alert": "short_open", "price": "{{close}}", "key": "YOUR_BOT_HOOK_KEY"}')
alertcondition(test, title='Short Close', message='{"symbol": "{{ticker}}", "alert": "short_close", "price": "{{close}}", "key": "YOUR_BOT_HOOK_KEY"}')

